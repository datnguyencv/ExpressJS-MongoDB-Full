<!-- views/detail.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/style.css">
  <title>Product Detail</title>
</head>
<body class="bg-gray-100">
  <div class="container d-flex justify-center text-center mx-auto p-4">
    <h1 class="text-3xl text-center font-semibold mb-4">Product Detail</h1>
    <div class="bg-white rounded-md shadow-md p-4 mb-4">
        <img src="<%= product.image %>" class="w-1/2 h-[50vw] object-cover" style="margin: auto;"/>
      <h2 class="text-lg font-semibold"><%= product.name %></h2>
      <p class="text-sm">Quantity: <%= product.quantity %></p>
      <p class="text-sm">Price: $<%= product.price %></p>
    </div>

    <a href="/" class="bg-gray-500 text-white px-4 py-2 rounded">Back to Home</a>
  </div>
</body>
</html>
