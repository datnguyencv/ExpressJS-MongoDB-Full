<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/style.css">
  <title>Edit Product</title>
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-semibold mb-4">Edit Product</h1>

    <form action="/update/<%= product._id %>" method="post">
      <div class="mb-4">
        <label for="name" class="text-sm font-semibold">Name:</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" required class="w-full border p-2 rounded">
      </div>
      <div class="mb-4">
        <label for="quantity" class="text-sm font-semibold">Quantity:</label>
        <input type="number" id="quantity" name="quantity" value="<%= product.quantity %>" required class="w-full border p-2 rounded">
      </div>
      <div class="mb-4">
        <label for="price" class="text-sm font-semibold">Price:</label>
        <input type="number" id="price" name="price" value="<%= product.price %>" required class="w-full border p-2 rounded">
      </div>
      <div>
        <label class="text-gray-600 mb-2 block font-semibold">
          Image URL
        </label>
        <input
          type="text"
          value="<%= product.image %>"
          oninput="updateImage(event)"
          name="image"
          class="w-full block border p-3 text-gray-600 rounded focus:outline-none focus:shadow-outline focus:border-blue-200 placeholder-gray-400"
          placeholder="Image URL"
        />
        <div id="imagePreview" class="w-1/2 border rounded p-2 mt-4">
          <% if (product.image) { %>
            <img class="w-full" src="<%= product.image %>" />
          <% } else { %>
            <img class="w-full" src="https://via.placeholder.com/300" alt="Empty Image" />
          <% } %>
        </div>
      </div>
      
<div class="flex gap-2 px-3 py-6 mb-2">
      <button type="submit" class="button bg-blue-500 text-white px-4 py-2 rounded">Update Product</button>
      <a href="/" class="bg-gray-500 text-white px-4 py-2 rounded ml-2">Back to Home</a>
    </div>
    </form>
  </div>
</body>
<script>
   document.addEventListener("DOMContentLoaded", function() {
  function updateImage(event) {
    const imageUrl = event.target.value;
    const imagePreview = document.getElementById('imagePreview');

    if (imageUrl) {
      imagePreview.innerHTML = `<img src="${imageUrl}" alt="Image Preview" class="w-1/2 object-cover">`;
    } else {
      imagePreview.innerHTML = '<img src="https://via.placeholder.com/300" alt="Empty Image" class="w-full h-32 object-cover">';
    }
  }
  window.updateImage = updateImage;
});
</script>
</html>
